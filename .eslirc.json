{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-var": "error",
        "max-len": [
            "error",
            80,
            {
                "ignorePattern": "d=\"([\\s\\S]*?)\""
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "only-multiline",
                "objects": "only-multiline"
            }
        ],
        "react/prop-types": "off",
        "no-console": "warn",
        "space-infix-ops": "warn",
        "require-jsdoc": "warn"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}